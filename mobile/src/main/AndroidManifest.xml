<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.valerauko.newplaying">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".Dummy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".WearListener"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:path="/nowplaying" />
            </intent-filter>
        </service>
        <receiver
            android:name=".PlayReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.jrtstudio.AnotherMusicPlayer.playstatechanged" />
                <action android:name="com.jrtstudio.AnotherMusicPlayer.metachanged" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".PostIt"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="net.valerauko.newplaying.SEND_REQUESTED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>